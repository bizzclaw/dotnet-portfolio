@using System.Security.Claims

@{
    ViewData["Title"] = "Joseph Tomlinson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="clickable" onclick="location.href='@Url.Action("Index", "Home")'">< Return</h2>

    @foreach (var blogPost in Model)
    {
        <div class="blogpost-listed" onclick="location.href='@Url.Action("Details", new {id = blogPost.Id})'">
            <h3>@blogPost.Title</h3>
            <h5 class="timestamp" value ="@blogPost.Date"></h5>
            <p>@blogPost.PartialBody(256)</p>
        </div>
        
    }

    @if (User.Identity.IsAuthenticated)
    {
        <h2 class="clickable" onclick="location.href='@Url.Action("Create")'">+ Write a new Post</h2>
    }
</div>