@model Portfolio.Models.PageInfo

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MainInfo)
        @Html.TextBoxFor(m => m.MainInfo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GitHub)
        @Html.TextBoxFor(m => m.GitHub, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LinkedIn)
        @Html.TextBoxFor(m => m.LinkedIn, new { @class = "form-control" })
    </div>

    <button class="btn btn-info" type="submit">Submit</button>
}